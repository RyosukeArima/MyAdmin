{
  "name": "my-admin-ts",
  "version": "1.0.0",
  "description": "工数管理、ToDo管理、サブスクリプション管理を一元化するデスクトップアプリケーション",
  "main": "main.js",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "cross-env NODE_ENV=production next build && node fix-paths.js",
    "start": "next start",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "electron-pack-win": "npm run build && electron-builder --win --x64",
    "prepack": "npm run build",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rimraf out dist .next"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@mui/x-date-pickers": "^6.18.0",
    "dayjs": "^1.11.10",
    "lucide-react": "^0.298.0",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "tailwindcss": "^3.3.6"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.ryo.myadmin",
    "productName": "My Admin",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "files": [
      "out/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "artifactName": "my-admin-setup.exe",
      "sign": false,
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false,
      "signAndEditExecutable": false,
      "signDlls": false
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "compression": "store",
    "removePackageScripts": true
  },
  "author": "Ryosuke Arima",
  "license": "MIT"
}
